<%= form_for [refinery, :blog_admin, @category] do |f| -%>
  <%= render "/refinery/admin/error_messages",
             :object => f.object,
             :include_object_name => true %>

  <%= render '/refinery/admin/locale_picker',
              :current_locale => Globalize.locale %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>
  <br/>
  <div class='field'>
    <%= f.label :cat_type, "Category Type" -%>
    <%= f.label :cat_type do %>
      <%= f.radio_button(:cat_type, "topic") %>
      Financial Topics
    <%end%>
    <%= f.label :cat_type do %>
      <%= f.radio_button(:cat_type, "expertise_level") %>
      Reader's Expertise Level
    <%end%>

  </div>
  <br/>
  <div class='field'>
    <%= f.label :value do%>
    Category Type Description
    <%= f.text_field :value, :class => 'larger widest' -%>
    <%end%>
  </div>

  <%= render "/refinery/admin/form_actions",
             :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.blog.admin.categories.category') %>
<% end %>
