<%= render '/refinery/blog/admin/submenu' %>
<div id='records'>
  <% if searching? %>
    <h2><%= t('results_for', :scope => 'refinery.admin.search', 
                             :query => params[:search]) %></h2>
    <% if @posts.any? %>
      <%= render :partial => "blog_posts",
                 :collection => @posts %>
    <% else %>
      <p><%= t('no_results', :scope => 'refinery.admin.search') %></p>
    <% end %>
  <% else %>
    <% if @posts.any? %>
      <%= will_paginate @posts %>

      <%= render "sortable_posts_list" %>

      <%= will_paginate @posts %>
    <% else %>
      <p>
        <strong>
          <%= t('.no_items_yet') %>
        </strong>
      </p>
    <% end %>
  <% end %>
</div>

